{
  "name": "fischbot",
  "version": "1.0.0",
  "description": "A Telegram Bot",
  "main": "dist/app.js",
  "repository": "https://github.com/jakob-kruse/fischtisch_botv2.git",
  "author": "Jakob Kruse <jakob.kruse@tuta.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:prod": "tsc && node dist/app.js",
    "start:dev": "nodemon src/app.ts",
    "docker:start:dev": "bash bin/docker:dev.sh",
    "docker:start:prod": "bash bin/docker:prod.sh",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0"
  },
  "dependencies": {
    "fastify": "^3.4.1",
    "telegraf": "^3.38.0",
    "typescript": "^4.0.3"
  }
}
